  	<session-config>
  		<session-timeout>30</session-timeout>
  	</session-config>
  
  <welcome-file-list>
    <welcome-file>hello.xhtml</welcome-file>
  </welcome-file-list>
  
  <error-page>
    	<exception-type>java.lang.Exception</exception-type>
    	<location>/hello.xhtml</location>
	</error-page>
</web-app>